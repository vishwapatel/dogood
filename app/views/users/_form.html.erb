<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h3>All fields are required.</h3>
  <br />

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div class="field">
    <%= f.label "Password (minimum 8 characters)" %>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= label :user, "Confirm Password" %>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="field">
    <%= label :sex, "Gender" %>
    <%= f.radio_button :gender, "Male" %>
    <%= label :user_gender, "Male"  %>
    <%= f.radio_button :gender, "Female" %>
    <%= label :user_gender, "Female"%>
  </div>

  </br>
   <div>
    <%= label :user_photo, "Upload your photo" %>
    <%= f.file_field :photo %>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-success" %>
  </div>
  
<% end %>
